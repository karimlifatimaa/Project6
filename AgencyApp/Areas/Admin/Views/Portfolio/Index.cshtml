@using Core.Models;


@model List<Portfolio>
@{
    int count = 1;
}
<div class="container">
    <div class="row">
        <h1>
            Portfolio
        </h1>

        <a class="btn btn-info" asp-action="Create" asp-controller="Portfolio" >Create</a>

    </div>
</div>
<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="~/Uploads/Portfolio/@item.ImgUrl" width="100" height="100" class="img-fluid"></img>
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-controller="Portfolio" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Portfolio" asp-route-id="@item.Id">Delete</a>

                        </td>
                    </tr>
                    count++;
                }

            </tbody>
        </table>
    </div>
</div>